    "title" : "mastodon API",
    "version" : "0.1.0"
  },
  "servers" : [ {
    "url" : "/"
  } ],
  "paths" : {
    "/api/v1/accounts/{account_id}" : {
      "get" : {
        "parameters" : [ {
          "description" : "account id",
          "in" : "path",
          "name" : "account_id",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/account"
                }
              }
            },
            "description" : "account profile"
          },
          "403" : {
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/error"
                }
              }
            },
            "description" : "forbidden"
          },
          "404" : {
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/error"
                }
              }
            },
            "description" : "not found"
          }
        },
        "security" : [ { } ],
        "summary" : "View information about a profile.",
        "tags" : [ "accounts" ]
      }
    },
    "/nodeinfo/2.0" : {
      "get" : {
        "responses" : {
          "200" : {
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/nodeinfo_2.0"
                }
              }
            },
            "description" : "node info"
          }
        },
        "summary" : "Show node info",
        "tags" : [ "server" ]
      }
    }
  },
  "components" : {
    "schemas" : {
      "account" : {
        "additionalProperties" : false,
        "properties" : {
          "id" : {
            "type" : "string"
