- content_for :page_title do
  = t('.title')

= simple_form_for @domain_block, url: admin_domain_blocks_path do |f|
  = render 'shared/error_messages', object: @domain_block

  %p.hint= t('.hint')

  = f.input :domain, placeholder: t('admin.domain_blocks.domain')
  = f.input :severity, collection: DomainBlock.severities.keys, wrapper: :with_label, include_blank: false, label_method: lambda { |type| t(".severity.#{type}") }

  %p.hint= t('.severity.desc_html')

  = f.input :reject_media, as: :boolean, wrapper: :with_label, label: t('admin.domain_blocks.reject_media'), hint: t('admin.domain_blocks.reject_media_hint')

  = f.input :sensitive, as: :boolean, wrapper: :with_label, label: t('admin.domain_blocks.sensitive'), hint: t('admin.domain_blocks.sensitive_hint')

  .actions
    = f.button :button, t('.create'), type: :submit
